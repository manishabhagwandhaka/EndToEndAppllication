        stage('Execute Playbook') {
            steps {
                // execute ansible playbook 
                
               ansiblePlaybook credentialsId: 'jenkinsAnsible', disableHostKeyChecking: true, installation: 'Ansible', inventory: '/etc/ansible/hosts', playbook: 'target-group.yml'


            }
            
        }
    }
}
